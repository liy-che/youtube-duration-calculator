{
    "name": "Video Duration for YouTubeâ„¢",
    "version": "1.0.2.1",
    "description": "Get remaining YouTube video watch time with various speed settings",
    "manifest_version": 3,
    "author": "liyche",
    "permissions": [
        "activeTab", "declarativeContent", "commands"
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [{
        "matches": ["*://*.youtube.com/*"],
        "js":["js/content.js"],
        "run_at": "document_start"
    }],
    "action": {
        "default_popup": "index.html",
        "default_title": "YouTube Video Duration",
        "default_icon": {
            "16": "/icons/speedCalc16.png",
            "32": "/icons/speedCalc32.png",
            "48": "/icons/speedCalc48.png",
            "128": "/icons/speedCalc128.png"
        }
    },
    "icons": {
        "16": "/icons/speedCalc16.png",
        "32": "/icons/speedCalc32.png",
        "48": "/icons/speedCalc48.png",
        "128": "/icons/speedCalc128.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+S"
            }
        }
    }
}