{
    "name": "YouTube Speed Time Calculator",
    "version": "1.0.0",
    "description": "Simple Calculator to find time with YouTube video speed",
    "manifest_version": 3,
    "author": "Liying Chen",
    "permissions": [
        "activeTab", "scripting", "storage", "declarativeContent"
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "action":{
        "default_popup": "index.html",
        "default_title": "YouTube Speed Calculator",
        "default_icon": {
            "16": "/images/speedCalc16.png",
            "32": "/images/speedCalc32.png",
            "48": "/images/speedCalc48.png",
            "128": "/images/speedCalc128.png"
        }
    },
    "icons": {
        "16": "/images/speedCalc16.png",
        "32": "/images/speedCalc32.png",
        "48": "/images/speedCalc48.png",
        "128": "/images/speedCalc128.png"
    }
}